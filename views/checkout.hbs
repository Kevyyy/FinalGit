
<div id="padding"></div>
<div id='container'>
  <form action="/checkout" method="post" id="payment-form">
    <div class="form-row">
        <label for="Address">Postal Code</label>
     <input type="text" class="form-control" name="postCode">
    <label for="Name">Name</label>
     <input type="text" class="form-control" name="name">
    <label for="Address">Street </label>
     <input type="text" class="form-control" name="address">
    <label for="Address">Street Number</label>
     <input type="text" class="form-control" name="streetNumber">
    <label for="Name">City</label>
     <input type="text" class="form-control" name="city">
    <label for="Address">State/Province</label>
     <input type="text" class="form-control" name="state">
     <label for="Address">Country</label>
     <input type="text" class="form-control" name="country">

      <label for="card-element">
        Credit or debit card
      </label>
      <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
      </div>
      <!-- Used to display Element errors. -->
      <div id="card-errors" role="alert"></div>
   </div>
  <button type="payment">Submit Payment</button>
  </form>
</div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>
<script> var stripePublicKey={{stripePublicKey}}</script>