<div id="padding"></div>
{{#each products }}
    <div id="container">
        {{#each this }}
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <h1 class="description">{{ this.description }}</h1>
                        <div class="clearfix">
                            <div class= "price">${{ this.price }}</div>
                            <input type="button" onclick="location.href='/addcart/{{this._id}}';" value="Add cart" />
                        </div>
                    </div>
                </div>
        {{/each}}
    </div>
{{/each}}
</div>
